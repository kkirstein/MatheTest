<control-panel>

	<!-- layout -->

	<div id="control-panel">
		<ul>
			<li>
				<label>Anzahl Aufgaben:</label>
				<input type="number"/>
			</li>
			<li>
				<button>Starte Test</button>
			</li>
			<li>
				<p>Aktuelle Zeit: { elpapsedTime() }</p>
			</li>
			<li>
				<p>{ successMessage }</p>
			</li>
		</ul>
	</div>


	<!-- styles -->
	<style>
		control-panel {
			float: left;
			width: 80%;
			background-color: #f8f8f8;
			border-radius: 10px;
			padding: 10px;
			margin: 10px;
		}
		ul {
			list-style: none;
			padding: 0;
			margin: 15px;
			float: left;
		}
		ul li {
			/* nthing */
		}
		ul li label {
			width: 5em;
			text-align: right;
		}
	</style>

	<!-- logic -->

</control-panel>

